@model IEnumerable<SisMed.WebUI.ViewModel.ConsultaViewModel>

@{
    ViewBag.Title = "Controle de consultas";
}

<h2>Controle de consultas</h2>

<p>
    @Html.ActionLink("Adicionar", "Create", "" ,new { @class = "btn btn-primary" } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            <span class="pull-right"><a href="@Url.Action("Delete", new { id = item.Id })"> <span class="glyphicon glyphicon-trash"></span></a></span>
        </td>
        <td></td>
    </tr>
}

</table>
